<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateAccountFragment"
    android:background="@color/main_background">

    <EditText
        android:id="@+id/user_name_login"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="@dimen/big_dp"
        android:layout_marginRight="@dimen/big_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/password_login"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_dp"
        android:layout_marginRight="@dimen/big_dp"
        app:layout_constraintTop_toBottomOf="@id/user_name_login"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/create_account_button"
        android:text="create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_button"
        android:layout_marginBottom="@dimen/medium_dp"
        android:layout_marginRight="@dimen/big_dp"
        android:layout_marginLeft="@dimen/small_dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/cancel_button"
        android:text="cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/big_dp"
        android:layout_marginBottom="@dimen/medium_dp"
        android:layout_marginRight="@dimen/small_dp"
        android:background="@color/cancel_button"
        app:layout_constraintRight_toLeftOf="@id/create_account_button"
        android:textColor="@android:color/white"
        />


</android.support.constraint.ConstraintLayout>